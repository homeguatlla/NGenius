				<up X="0" Y="1" Z="0"/>
			</camera>
			<camera name="gui_camera" screen_width="1920" screen_height="1080" near_plane="0.1" far_plane="100">
				<position X="0" Y="0" Z="40"/>
				<target X="0" Y="0" Z="-50"/>
				<up X="0" Y="1" Z="0"/>
			</camera>
		</cameras>
	</libraries>
